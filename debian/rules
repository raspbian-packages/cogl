#!/usr/bin/make -f

export DEB_BUILD_MAINT_OPTIONS = hardening=+all
export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

%:
	dh $@ --with gir,gnome

#ifeq ($(DEB_HOST_ARCH),$(findstring $(DEB_HOST_ARCH),armel armhf))
#CONFFLAGS += \
#	--with-default-driver=gles2
#else
CONFFLAGS += \
	--with-default-driver=gl
#endif

#ifeq ($(DEB_HOST_ARCH_OS),linux)
#CONFFLAGS += \
#	--enable-wayland-egl-platform \
#	--enable-wayland-egl-server \
#	--enable-kms-egl-platform
#endif

override_dh_autoreconf:
	dh_autoreconf --as-needed

override_dh_auto_configure:
	dh_auto_configure -- \
		--enable-gtk-doc \
		--enable-gdk-pixbuf \
		--enable-cogl-pango \
		--enable-introspection \
		--enable-gl \
		--enable-cogl-gst \
		$(CONFFLAGS)

override_dh_makeshlibs:
	dh_makeshlibs -- -c4

override_dh_install:
	find debian/tmp -name '*.la' -print -delete
	dh_install

override_dh_missing:
	dh_missing --list-missing

override_dh_strip:
	dh_strip -plibcogl20 --dbgsym-migration='libcogl20-dbg (<< 1.22.2-1~)'
	dh_strip -plibcogl-pango20 --dbgsym-migration='libcogl-pango20-dbg (<< 1.22.2-1~)'
	dh_strip -plibcogl-gst20 --dbgsym-migration='libcogl-gst20-dbg (<< 1.22.2-1~)'
	dh_strip --remaining-packages

# Don't run tests on armel since they hang on Debian's buildd there
override_dh_auto_test:
ifeq (,$(findstring $(DEB_HOST_ARCH),"armel"))
	-xvfb-run -a dh_auto_test
else
endif
